      .zag-out:after {
      top: 100%;
      background:
      linear-gradient(135deg, white 33.333%, transparent 0),
      linear-gradient(-135deg, white 33.333%, transparent 0);
      }
      .zag-in:after {
      bottom: 0;
      background:
      linear-gradient(45deg, white 33.333%, transparent 0),
      linear-gradient(-45deg, white 33.333%, transparent 0);
      }
      .zig {
      position: relative;
      }
      .zig::after {
      content: "";
      position: absolute;
      left: 0;
      width: 100%;
      height: 0.9em; /*desired tooth height*/
      background-size: 1.6em 100%; /*width (1st num) must be twice tooth height*/
      background-position: center;
      }
      .shadow {
      -webkit-filter: drop-shadow(rgba(0, 0, 0, 0.5) 0px 1px 2px); /*optional*/
